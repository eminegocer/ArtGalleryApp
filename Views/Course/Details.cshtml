@model Course

<div class="row">
    <div class="col md-4">
        <img src="~/img/@Model.image " class="image-fluid rounded" alt="">
    </div>
    <div class="col md-8">

        <a asp-controller="course" asp-action="details" asp-route-Id="@Model.Id">
            <h5 class="card-title">@Model.Title</h5>
        </a>

        <p class="card-text">@Model.Content</p>
        <div>
            @if(@Model.Tags!=null){
            @foreach(var tag in @Model.Tags ){
            <span class="badge bg-primary">@tag</span>
            }
            }
        </div>

    </div>
</div>