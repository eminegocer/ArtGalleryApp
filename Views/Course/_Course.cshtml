@model Course
<div class="card mb-3" id="@Model.Id">
    <div class="row">
        <div class="col md-4">
            <img src="~/img/@Model.image " class="image-fluid rounded-start" alt="">
        </div>
        <div class="col md-8">
            <div class="card-body">
                <a asp-controller="course" asp-action="details" asp-route-Id="@Model.Id">
                    <h5 class="card-title">@Model.Title</h5>
                </a>

                <p class="card-text">@Model.Description</p>
            </div>

        </div>
    </div>


</div>